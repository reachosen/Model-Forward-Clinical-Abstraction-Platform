{
  "data_schemas": {
    "patient_case": {
      "type": "object",
      "description": "Complete patient case data for CLABSI evaluation",
      "properties": {
        "patient_id": {"type": "string"},
        "encounter_id": {"type": "string"},
        "demographics": {
          "age": {"type": "number"},
          "gender": {"type": "string"}
        },
        "devices": {
          "central_line_insertion_date": {"type": "string", "format": "date"},
          "central_line_type": {"type": "string", "enum": ["CVC", "PICC", "tunneled", "implanted_port"]},
          "central_line_removal_date": {"type": "string", "format": "date"}
        },
        "lab_results": {
          "type": "array",
          "items": {"$ref": "#/definitions/LabResult"}
        },
        "clinical_signs": {
          "fever": {"type": "boolean"},
          "temperature_celsius": {"type": "number"},
          "chills": {"type": "boolean"},
          "hypotension": {"type": "boolean"}
        },
        "other_infections": {
          "type": "array",
          "items": {"$ref": "#/definitions/OtherInfection"}
        }
      }
    },
    "definitions": {
      "LabResult": {
        "type": "object",
        "properties": {
          "test_type": {"type": "string"},
          "collection_date": {"type": "string", "format": "date"},
          "result_date": {"type": "string", "format": "date"},
          "organism": {"type": "string"},
          "organism_type": {"type": "string", "enum": ["recognized_pathogen", "common_commensal"]},
          "sample_type": {"type": "string"}
        }
      },
      "OtherInfection": {
        "type": "object",
        "properties": {
          "infection_type": {"type": "string"},
          "site": {"type": "string"},
          "organism": {"type": "string"},
          "diagnosis_date": {"type": "string", "format": "date"}
        }
      }
    }
  }
}
