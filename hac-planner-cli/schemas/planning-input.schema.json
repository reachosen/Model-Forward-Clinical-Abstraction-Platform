{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/planning-input.schema.json",
  "title": "PlanningInput",
  "description": "Input structure for the HAC Planner CLI",
  "type": "object",
  "required": [
    "planning_id",
    "concern_id",
    "archetype",
    "domain",
    "data_profile",
    "clinical_context"
  ],
  "properties": {
    "planning_id": {
      "type": "string",
      "description": "Unique identifier for this planning request",
      "minLength": 1
    },
    "concern_id": {
      "type": "string",
      "description": "Hospital-acquired condition concern identifier (e.g., CLABSI, VAP, CAUTI)",
      "pattern": "^[A-Z_]+$",
      "examples": ["CLABSI", "VAP", "CAUTI", "SSI"]
    },
    "archetype": {
      "type": "string",
      "description": "Archetype or template to base the configuration on",
      "enum": [
        "device_associated_infection",
        "surgical_site_infection",
        "adverse_event",
        "medication_safety",
        "patient_safety"
      ]
    },
    "domain": {
      "type": "object",
      "required": ["name", "facility"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Domain name"
        },
        "facility": {
          "type": "object",
          "required": ["type", "location"],
          "properties": {
            "type": {
              "type": "string",
              "description": "Facility type",
              "examples": ["Children's Hospital", "General Hospital", "Specialty Hospital"]
            },
            "location": {
              "type": "string",
              "description": "Facility location"
            },
            "context": {
              "type": "string",
              "description": "Additional facility context"
            }
          }
        }
      }
    },
    "data_profile": {
      "type": "object",
      "required": ["sources"],
      "properties": {
        "sources": {
          "type": "array",
          "description": "Available data sources",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/DataSource"
          }
        },
        "volumes": {
          "type": "object",
          "properties": {
            "daily_admissions": {
              "type": "number",
              "minimum": 0
            },
            "monthly_cases": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "quality": {
          "type": "object",
          "properties": {
            "completeness": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "timeliness": {
              "type": "string",
              "enum": ["real-time", "hourly", "daily", "weekly", "monthly"]
            }
          }
        }
      }
    },
    "clinical_context": {
      "type": "object",
      "required": ["objective"],
      "properties": {
        "objective": {
          "type": "string",
          "description": "Primary clinical objective",
          "minLength": 1
        },
        "population": {
          "type": "string",
          "description": "Target patient population"
        },
        "surveillance_requirements": {
          "type": "array",
          "description": "Surveillance or reporting requirements",
          "items": {
            "type": "string"
          }
        },
        "regulatory_frameworks": {
          "type": "array",
          "description": "Regulatory or compliance frameworks",
          "items": {
            "type": "string",
            "enum": ["NHSN", "CMS", "Joint Commission", "State Health Department"]
          }
        }
      }
    },
    "preferences": {
      "type": "object",
      "properties": {
        "min_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Desired confidence threshold for determinations"
        },
        "max_findings_per_category": {
          "type": "number",
          "minimum": 1,
          "description": "Maximum number of signals to generate per category"
        },
        "include_experimental": {
          "type": "boolean",
          "description": "Include experimental features"
        },
        "custom": {
          "type": "object",
          "description": "Additional custom preferences"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "requested_by": {
          "type": "string"
        },
        "requested_at": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "DataSource": {
      "type": "object",
      "required": ["source_id", "type", "available_data"],
      "properties": {
        "source_id": {
          "type": "string",
          "description": "Source identifier"
        },
        "type": {
          "type": "string",
          "description": "Source type",
          "enum": ["EHR", "Laboratory", "Device", "Pharmacy", "Radiology", "Microbiology", "Registry"]
        },
        "available_data": {
          "type": "array",
          "description": "Available data elements from this source",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "update_frequency": {
          "type": "string",
          "description": "Data update frequency",
          "enum": ["real-time", "hourly", "daily", "weekly"]
        },
        "integration": {
          "type": "string",
          "description": "Integration method",
          "enum": ["HL7", "FHIR", "API", "Database", "File"]
        }
      }
    }
  }
}
