      "display_name": "Outcome Monitoring",
      "description": "Signals related to post-operative outcome monitoring",
      "priority": 3,
      "signals": [
        {
          "signal_id": "neurovascular_checks",
          "description": "Regular neurovascular checks documented",
          "evidence_type": "verbatim_text",
          "required": true
