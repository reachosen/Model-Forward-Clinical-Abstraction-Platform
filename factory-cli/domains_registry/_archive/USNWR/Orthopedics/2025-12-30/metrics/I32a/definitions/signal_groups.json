{
  "$schema": "../../../_shared/definitions/signal_groups.schema.json",
  "metric_id": "I32a",
  "version": "1.0",
  "description": "Signal groups for I32a pediatric scoliosis surgery safety metric",

  "signal_groups": [
    {
      "group_id": "INFECTION_PREVENTION",
