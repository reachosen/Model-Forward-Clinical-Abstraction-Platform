      "signals": [
        {
          "signal_id": "prophylactic_antibiotic_timing",
          "description": "Prophylactic antibiotics administered within 60 minutes of incision",
          "evidence_type": "verbatim_text",
          "required": true
        },
        {
          "signal_id": "antibiotic_redosing",
          "description": "Antibiotic redosing for procedures > 4 hours",
          "evidence_type": "verbatim_text",
          "required": true
        },
        {
          "signal_id": "wound_assessment",
          "description": "Post-operative wound assessment documented",
          "evidence_type": "verbatim_text",
          "required": true
        },
        {
          "signal_id": "ssi_indicators",
          "description": "Signs of surgical site infection (erythema, warmth, drainage)",
          "evidence_type": "verbatim_text",
          "required": false
        }
      ]
    },
    {
      "group_id": "SURGICAL_BUNDLE_COMPLIANCE",
      "display_name": "Surgical Bundle Compliance",
      "description": "Signals related to surgical safety bundle adherence",
      "priority": 2,
      "signals": [
        {
          "signal_id": "surgical_timeout",
          "description": "Surgical timeout documented",
          "evidence_type": "structured_field",
          "required": true
